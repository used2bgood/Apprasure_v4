<footer class="site-footer">
  <div class="container footer-grid">
    <div class="footer-brand">
      {% set logo = site.logo %}
      {% if not logo %}{% set logo = '/assets/apple-touch-icon.png' %}{% endif %}
      <img src="{{ logo }}" alt="AppraSure Logo Footer" width="200" height="45" />
      <p class="tagline">Clear Resolutions for Complex Disputes</p>
    </div>

    <div class="footer-contact">
      <h4>Contact</h4>
      <p>Email: <a href="mailto:{{ site.email or 'info@apprasure.com' }}">{{ site.email or 'info@apprasure.com' }}</a></p>
      <p>Text: <a href="tel:{{ site.phone or '(469) 905-0505' }}">{{ site.phone or '(469) 905-0505' }}</a></p>
      <p>{{ site.location or 'Lewisville, TX' }}</p>
    </div>

    <div class="footer-social">
      <h4>Follow Us</h4>
      <p>
        <a href="{{ site.linkedin or '#' }}" rel="noopener">LinkedIn</a><br />
        <a href="{{ site.instagram or '#' }}" rel="noopener">Instagram</a>
      </p>
    </div>
  </div>

  <div class="container footer-meta">
    <p>Â© {% year %} AppraSure. All rights reserved.</p>
  </div>
</footer>
